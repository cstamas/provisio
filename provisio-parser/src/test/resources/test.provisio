      includes => [ "**/mvn*" ],
      excludes => [ "**/*.bat" ]
    )
  }

  lib {
    ch.qos.logback:logback-core:1.0.7
    ch.qos.logback:logback-classic:1.0.7    
    org.eclipse.aether:aether-connector-file:0.9.0.M1
