{

  "actions": {
    "mkdirs": {
      "directories": "var/log,var/tmp,site"
    }  
  },
  
  "fileSets":{

    "bin":{
      "artifacts" : [
        { "io.tesla.proviso:proviso-booter-jsw:0.0.1-SNAPSHOT":{}} 
      ]    
    },
    
    "lib":{
